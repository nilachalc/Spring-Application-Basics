<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context.xsd">

	<context:component-scan base-package="com.example.spring.application.basics" ></context:component-scan>

	<bean id="xmlBasedMyConnection" class="com.example.spring.application.basics.xmlconfig.XmlBasedMyConnection">
	</bean>
	
	<bean id="xmlBasedTestDao" class="com.example.spring.application.basics.xmlconfig.XmlBasedTestDao">
		<property name="xmlBasedMyConnection" ref="xmlBasedMyConnection"></property>
	</bean>

</beans>